---
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import LibraryIcon from "@/icons/Library.astro";
import AsideMenuItem from "./AsideMenuItem.astro";
import AsideMenuCard from "./AsideMenuCard.astro";

import { playlists } from "@/lib/data";
---

<nav class="h-full flex flex-col gap-2">
  <div class="flex flex-col bg-zinc-900 p-2 rounded-lg overflow-hidden">
    <ul>
      <AsideMenuItem href="/">
        <HomeIcon class="text-zinc-400" size={32} />
        Inicio
      </AsideMenuItem>
    </ul>

    <ul>
      <AsideMenuItem href="/#">
        <SearchIcon />
        Buscar
      </AsideMenuItem>
    </ul>
  </div>

  <div
    class="flex-1 flex flex-col bg-zinc-900 p-2 rounded-lg overflow-x-hidden"
  >
    <ul>
      <AsideMenuItem href="/">
        <LibraryIcon />
        Biblioteca
      </AsideMenuItem>
    </ul>

    <div class="playlists-container my-2 overflow-x-hidden">
      <ul>
        {playlists.map((playlist) => <AsideMenuCard playlist={playlist} />)}
      </ul>
    </div>
  </div>
</nav>
