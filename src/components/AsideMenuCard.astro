---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists, color } = playlist;

const arstistString = artists.join(", ");
---

<a
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-white/10 transition duration-200"
  href={`/playlist/${id}`}
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Portada de la playlist ${title} por ${arstistString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col font-normal truncate">
    <h4 class="text-white text-sm">{title}</h4>

    <span class="text-sm text-gray-400">
      {arstistString}
    </span>
  </div>
</a>
