---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists, color } = playlist;

const arstistString = artists.join(", ");
---

<a
  class="playlist-item transition-all duration-300 flex flex-col relative p-2 overflow-hidden gap-2 rounded-md hover:bg-zinc-500
  shadow-lg hover:shadow-xl bg-zinc-500/30 w-44"
  href={`/playlist/${id}`}
>
  <picture class="aspect-square w-full h-auto flex-none">
    <img
      src={cover}
      alt={`Portada de la playlist ${title} por ${arstistString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col p-2">
    <h4 class="text-white text-sm">{title}</h4>

    <span class="text-xs text-gray-400">
      {arstistString}
    </span>
  </div>
</a>
