---
import PlayListItemCard from "@/components/PlayListItemCard.astro";
import Greetings from "@/components/Greetings.svelte";
import Layout from "../layouts/Layout.astro";
import { playlists } from "@/lib/data";
---

<Layout title="Spotify Clone">
  <div
    class="relative transition-all duration-1000 backdrop-blur-lg bg-gradient-to-t from-zinc-900 via-zinc-900 to-green-500"
  >
    <div class="relative z-10 px-6 py-10">
      <Greetings />

      <div class="grid grid-cols-5 mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </div>
    </div>
  </div>
</Layout>

